<Page
    x:Class="UniversalWorldClock.Views.SearchCity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalWorldClock.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:runtime="using:UniversalWorldClock.Runtime"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <runtime:ViewModelStorage x:Key="ViewStorage"/>
    </Page.Resources>
    <Page.DataContext>
        <Binding Path="Main" Source="{StaticResource ResourceKey=ViewStorage}"/>
    </Page.DataContext>
    <Grid>
        <AutoSuggestBox  ItemsSource="{Binding Countries}">
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>
    </Grid>
</Page>
