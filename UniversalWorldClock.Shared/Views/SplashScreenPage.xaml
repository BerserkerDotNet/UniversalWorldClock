<Page
    x:Class="UniversalWorldClock.Views.SplashScreenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Canvas>
        <Image x:Name="splashImage" Source="/Assets/SplashScreen.png" MaxWidth="620"/>
        <ProgressRing x:Name="progressRing" Width="50" Height="50" IsActive="True" Foreground="#6EA4CD" Margin="0,300,0,0" />
    </Canvas>
</Page>
